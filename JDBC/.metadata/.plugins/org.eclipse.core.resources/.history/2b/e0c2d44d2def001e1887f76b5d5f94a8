
import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.Statement;

public class CreateTable {

	public static void main(String[] args) 
	{
		try{
			Class.forName("com.mysql.cj.jdbc.Driver");
			Connection con=DriverManager.getConnection("jdbc:mysql://localhost:330/mydatabase","root","Harry@01");
			Statement st=con.createStatement();
			int x=st.executeUpdate("create table employee(eid number(38),ename varchar2(40),dept varchar2(40), sal number(38))");
			System.out.println(x);
			System.out.println("New Table created successfully");
		}
		catch(Exception e)
		{
			e.printStackTrace();
		}
	}
}